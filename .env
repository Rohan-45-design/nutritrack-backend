# Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# Database Configuration (Render PostgreSQL - FREE)
DATABASE_URL=postgresql://username:password@hostname:port/database
# For MySQL alternative (if you prefer):
# DB_HOST=your-mysql-host
# DB_USER=your-mysql-user
# DB_PASSWORD=your-mysql-password
# DB_NAME=nutritrack_pro_db
# DB_PORT=3306

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-make-it-very-long-and-complex-2025
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.netlify.app,https://your-frontend-domain.vercel.app

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
